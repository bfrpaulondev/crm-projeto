{
  "name": "crm-pipeline-api",
  "version": "1.0.0",
  "description": "Enterprise CRM + Pipeline GraphQL API with multi-tenancy, RBAC, and observability",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts --max-warnings 0",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run src/__tests__/unit",
    "test:integration": "vitest run src/__tests__/integration",
    "test:contract": "vitest run src/__tests__/contract",
    "codegen": "graphql-codegen --config codegen.ts",
    "typecheck": "tsc --noEmit",
    "docker:dev": "docker-compose -f docker/docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose -f docker/docker-compose.prod.yml up --build -d",
    "docker:down": "docker-compose -f docker/docker-compose.dev.yml down -v",
    "create-indexes": "tsx scripts/create-indexes.ts",
    "seed:dev": "tsx scripts/seed-dev.ts"
  },
  "keywords": [
    "graphql",
    "crm",
    "pipeline",
    "multi-tenant",
    "apollo-server",
    "mongodb",
    "redis",
    "typescript"
  ],
  "author": "Bruno Paulon",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "@apollo/server-plugin-response-cache": "^4.1.0",
    "@as-integrations/fastify": "^2.0.0",
    "@aws-sdk/client-s3": "^3.500.0",
    "@aws-sdk/s3-request-presigner": "^3.500.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/static": "^7.0.1",
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.50.0",
    "@opentelemetry/instrumentation": "^0.50.0",
    "@opentelemetry/instrumentation-http": "^0.50.0",
    "@opentelemetry/instrumentation-mongodb": "^0.41.0",
    "@opentelemetry/instrumentation-ioredis": "^0.37.0",
    "@opentelemetry/resources": "^1.23.0",
    "@opentelemetry/sdk-node": "^0.50.0",
    "@opentelemetry/sdk-trace-node": "^1.23.0",
    "@opentelemetry/semantic-conventions": "^1.23.0",
    "@pothos/core": "^4.0.0",
    "@pothos/plugin-directives": "^4.0.0",
    "@pothos/plugin-simple-objects": "^4.0.0",
    "@pothos/plugin-with-input": "^4.0.0",
    "@pothos/plugin-zod": "^4.0.0",
    "dataloader": "^2.2.2",
    "dotenv": "^16.4.1",
    "fastify": "^4.26.0",
    "graphql": "^16.8.1",
    "graphql-depth-limit": "^1.1.0",
    "graphql-query-complexity": "^0.12.0",
    "graphql-scalars": "^1.22.4",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "pino": "^8.18.0",
    "pino-pretty": "^10.3.1",
    "uuid": "^9.0.1",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-codegen/typescript-graphql-request": "^6.2.0",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.1",
    "@vitest/coverage-v8": "^1.2.1"
  }
}
